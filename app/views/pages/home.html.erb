<div class="banner">
  <div class="banner-content">

    <div class="container-home">
      <div class="center-row">
        <div class="form-card">
          <h1>Book Hostels for Instant Cashback</h1>
           <p>Elsa let's you save more by paying less</p>
           <form action="/hostels" method='get'>
              <div class="form-row">
                <div class="city">
                  <input type="text" class="form-control input-lg" placeholder="Berlin" name="city" >
                  <!-- the 'name="city"'' is for the search functionality -->
                 </div>
                <div class="col">
                  <input id="checkin" type="text" class="form-control border-radius input-lg datepicker" placeholder="Check-in">
                </div>
                <div class="col">
                  <input id="checkout" type="text" class="form-control border-radius input-lg datepicker" placeholder="Check-out">
                </div>
              </div>
              <div placeholder="# of Guests" class="guest">
                <select name="" id="guest-count" class="form-control border-radius input-lg">
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                  <option value="4">4</option>
                  <option value="5">5</option>
                  <option value="6">6</opt
                    ion>
                  <option value="7">7</option>
                  <option value="8">8</option>
                </select>
              </div>
              <div placeholder="room type" class="room-type">
                <select name="" id="room-types" class="form-control border-radius input-lg">
                  <option value="10 bed">10 bed</option>
                  <option value="8 bed">8 bed</option>
                  <option value="6 bed">6 bed</option>
                  <option value="4 bed">4 bed</option>
                  <option value="private">private</option>
                </select>
              </div>
              <input type='submit' class="btn-blue" value="Search"></input>
            </form>
        </div>
      </div>
    </div>
  </div>
</div>

